.content-wrapper {
    display: flex;
    flex-wrap: wrap; /* Permite que os itens quebrem a linha em telas menores */
    align-items: center;
    gap: 20px; /* Espaçamento entre a imagem e o texto */
}

.content-wrapper p {
    flex: 1; /* Permite que o parágrafo ocupe o espaço restante */
    min-width: 300px; /* Garante que o parágrafo não fique muito estreito */
}

.imagem-lorax {
    max-width: 250px; /* Tamanho da imagem */
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    display: block; /* Para centralizar se necessário ou evitar espaços extras */
    margin: 0 auto; /* Centraliza a imagem se não houver texto ao lado */
}

/* Ajustes para telas menores */
@media (min-width: 768px) {
    .imagem-lorax {
        margin: 0; /* Remove a margem auto para não interferir no flexbox */
    }

    .content-wrapper {
        flex-wrap: nowrap; /* Impede a quebra de linha em telas maiores */
    }

    .content-wrapper:nth-child(even) .imagem-lorax {
        order: 2; /* Coloca a imagem à direita em seções pares */
    }

    .content-wrapper:nth-child(even) p {
        order: 1; /* Coloca o texto à esquerda em seções pares */
    }
}


